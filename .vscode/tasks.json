{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",	
				"/home/pc/GameDev/cloud.cpp",			
				"/home/pc/GameDev/player.cpp",
				"/home/pc/GameDev/hud.cpp",
				"/home/pc/GameDev/animation.cpp",	
				"/home/pc/GameDev/scene.cpp",	
				"/home/pc/GameDev/collider.cpp",	
				"/home/pc/GameDev/entity.cpp",																																																																	
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-std=gnu++11",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}